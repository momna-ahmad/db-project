<div class="container mt-5">
  <h1 class="text-center mb-4">Checkout</h1>
  
  <% if (typeof error !== 'undefined') { %>
    <div class="alert alert-danger">
      <%= error %>
    </div>
  <% } %>

  <form action="/checkout" method="POST" class="needs-validation" novalidate>
    <!-- Buyer Info -->
    <h2 class="mb-3">Shipping Details</h2>
    
    <div class="mb-3">
      <label for="country" class="form-label">Country:</label>
      <input type="text" id="country" name="country" class="form-control" placeholder="Enter your country" required>
    </div>

    <div class="mb-3">
      <label for="city" class="form-label">City:</label>
      <input type="text" id="city" name="city" class="form-control" placeholder="Enter your city" required>
    </div>

    <div class="mb-3">
      <label for="address" class="form-label">Address:</label>
      <textarea id="address" name="address" class="form-control" placeholder="Enter your full address" required></textarea>
    </div>

    <!-- Payment Info -->
    <h2 class="mb-3">Payment</h2>
    
    <div class="mb-3">
      <label for="payment" class="form-label">Payment Method:</label>
      <select id="payment" name="payment" class="form-select" required>
        <option value="credit_card">Credit Card</option>
        <option value="paypal">PayPal</option>
      </select>
    </div>

    <!-- Order Summary -->
    <h2 class="mb-3">Order Summary</h2>
    <div id="order-summary">
      <% if (typeof cart !== 'undefined' && cart.length > 0) { %>
        <ul class="list-group mb-3">
          <% products.forEach(product => { %>
            <li class="list-group-item">
              <strong><%= product.name %></strong> 
              
              - Price: $<%= product.price %>
            </li>
          <% }) %>
        </ul>
        <p><strong>Total: $<%= totalAmount %></strong></p>
      <% } else { %>
        <p>No items in your cart.</p>
      <% } %>
    </div>

    <div class="text-center">
      <button type="submit" class="btn btn-primary">Place Order</button>
    </div>
  </form>
</div>
