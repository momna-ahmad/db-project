<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modern Profile Page</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/stylesheets/style2.css" rel="stylesheet">
</head>
<body>
    <div class="container position-relative">
        <a href="/" class="back-btn">
            home
            <i class="fa-solid fa-arrow-left"></i>
        </a>
        <!-- Cart Button -->
        <button class="cart-btn">
            <i class="bi bi-cart"></i>
        </button>

        <!-- Profile Section -->
        <% if (Profiles.length > 0) { %>
            <% Profiles.forEach(profile => { %>
                <div class="profile-container">
                    <div class="profile_username">
                        <img src="<%= profile.image %>"  onerror="this.src='/images/default-image.jpg';">
                        <h1 style="font-size: medium;"><%= profile.name %></h1>
                    </div>
                    <div class="store-heading">
                        <h1><%= profile.storename %></h1>
                        <p class="text-muted"><%= profile.description %></p>
                        <a href="/editProfile/<%= profile._id %>" class="btn btn-primary btn-sm" style="width:100px;">Edit</a>
                        
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <h2>No profile yet</h2>
            
        <% } %>

        <!-- Product Section -->
        <% if (Profiles.length > 0) { %>
            <a href="/addProduct" class="btn btn-sm btn-primary mt-5 mb-4">Add Products</a>

            <div class="row g-4">

                <% if (products.length > 0) { %>
                    <% products.forEach(function(product) { %>
                        <!-- Product Card -->
                        <div class="col-lg-3 col-md-4 col-sm-6">
                            <div class="card product-card">
                                <img src="<%= product.image %>" class="card-img-top" alt="Product">
                                <div class="card-body text-center">
                                    <h2><%= product.name %></h2>
                                    <div class="prod-price">
                                        <h5 class="card-title"><%= product.price %></h5>
                                        <span class="product-status in-stock"><%= product.status %></span> </div>
                                        <div><a href="/editProduct/<%= product._id %>" class="btn btn-primary btn-sm" style="width:100px;">Edit</a>
 <a href="/deleteProduct/<%= product._id %>" class="btn btn-danger btn-sm" style="width:100px;">Delete</a>

                                   
</div> 
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <h2>No products yet</h2>
                    <a href="/addProduct" class="btn btn-md btn-primary m-3">Add Products</a>
                <% } %>
            </div>
        <% } %>
    </div>

    <!-- Bootstrap JS and Icons -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" rel="stylesheet">
</body>
</html>
