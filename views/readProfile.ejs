<style>
    body{
        background-color: black;
        padding: 0;
        margin:0;
    }
</style>

<div class="container position-relative"  style="background-color: rgb(0, 0, 0); border-radius: 20px;">
    

    <!-- Profile Section -->
    <% if (user) { %>
        <div class="profile-container">
            <div class="profile_username">
                <h1 style="font-size: 3rem;font-weight: bolder; margin:30px;color: white;"><%= user.username %>  Products</h1>
            <div   style="display: flex; margin-left: -100px;" >
                <a href="/admin/add-product" class="btn btn-md btn-primary m-3" style="width:522px; color: black;background-color: white;">Add Products</a>
                <a href="/shop-order" class="btn btn-md btn-success m-3" style="width:522px; color: black;background-color: white;">Shop Orders</a></div> 
            </div>
        </div>
    <% } else { %>
        <h2>No profile yet</h2>
    <% } %>

    <!-- Product Section -->
    <% if (products) { %>
        <div class="row g-4">
            <% if (products.length > 0) { %>
                <% products.forEach(function(product) { %>
                    <!-- Product Card -->
                    <div class="col-lg-3 col-md-4 col-sm-6"  style=" margin-top: 80px;"   >
                        <div class="card product-card" style=" border-radius: 20px; border: 5px solid rgb(255, 255, 255);" >
                            <img src="<%= product.picture.imgUrl %>" class="card-img-top"  style=" border-radius: 20px 20px; " alt="Product">
                            <div class="card-body text-center">
                              <div style="display: flex; justify-content: space-evenly;"><h4 style="font-weight: bold; font-size: 1.5rem;"><%= product.name %></h4> 
                                 <h5 class="card-title" style="font-size: 1rem;font-weight: bolder; color: rgb(28, 28, 28);"  ><%= product.price %></h5>

                              </div>           <!-- Product Description -->
                                <h5  style=" font-size: 1rem;"><%= product.description %></h5>
                                <div class="prod-price">
                                    
                                </div>
                                <div>
                                    <a href="/admin/editProduct/<%= product._id %>" class="btn btn-sm" style="width:122px; background-color: black;padding:8px;margin: 2px; color: white; border-radius: 6px;">Edit</a>
                                    <a href="/admin/deleteProduct/<%= product._id %>" class="btn  btn-sm" style="width:122px ; background-color: black; padding:8px;margin: 2px;  color: white;border-radius: 6px;">Delete</a>
                                </div> 
                            </div>
                        </div>
                    </div>
                <% }) %>
              
            <% } else { %>
                <h2>No products yet</h2>
                <a href="/admin/add-product" class="btn btn-md btn-primary m-3">Add Products</a>
                <a href="/shop-order" class="btn btn-md btn-success">Shop Orders</a>
            <% } %>
        </div>
    <% } %>
    
</div>

<!-- Bootstrap JS and Icons -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" rel="stylesheet">
