<div class="container">
    <h4>Shopping Cart</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach(product => { %>
             <tr>
                 <td><%= product.title %></td>
                 <td><%= product.price %></td>
             </tr>
            <% }) %>
        </tbody>
    </table>
    <div class="mt-3 d-flex justify-content-between">
        <button class="btn btn-success">Check Out</button>
        <a href="/" class="btn btn-danger">Close</a>
    </div>
</div>
