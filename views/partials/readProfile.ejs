

    <div class="container position-relative">
        <a href="/readProfile?userId=<%= Profiles._id %>" class="back-btn">
            home
            <i class="fa-solid fa-arrow-left"></i>
        </a>
        <!-- Cart Button -->
        <button class="cart-btn">
            <i class="bi bi-cart"></i>
        </button>

        <!-- Profile Section -->
        <% if (Profiles) { %>
            
                <div class="profile-container">
                    <div class="profile_username">
                        <h1 style="font-size: medium;"><%= Profiles.username %></h1>
                    </div>
                    <div class="store-heading">
                        <p class="text-muted"><%= Profiles.description %></p>
                        <a href="/editProfile/<%= Profiles._id %>" class="btn btn-primary btn-sm" style="width:100px;">Edit</a>
                        
                    </div>
                </div>
            
        <% } else { %>
            <h2>No profile yet</h2>
            
        <% } %>

        <!-- Product Section -->
        <% if (Profiles) { %>
            

            <div class="row g-4">

                <% if (products.length > 0) { %>
                    <% products.forEach(function(product) { %>
                        <!-- Product Card -->
                        <div class="col-lg-3 col-md-4 col-sm-6">
                            <div class="card product-card">
                                <img src="<%= product.image %>" class="card-img-top" alt="Product">
                                <div class="card-body text-center">
                                    <h2><%= product.name %></h2>
                                    <div class="prod-price">
                                        <h5 class="card-title"><%= product.price %></h5>
                                        <span class="product-status in-stock"><%= product.status %></span> </div>
                                        <div><a href="/editProduct/<%= product._id %>" class="btn btn-primary btn-sm" style="width:100px;">Edit</a>
 <a href="/editProduct/<%= product._id %>" class="btn btn-danger btn-sm" style="width:100px;">delete</a>
                                   
</div> 
                                </div>
                            </div>
                        </div>
                        
                    <% }) %>
                    <a href="/addProduct" class="btn btn-md btn-primary m-3">Add Products</a>
                <% } else { %>
                    <h2>No products yet</h2>
                    <a href="/addProduct" class="btn btn-md btn-primary m-3">Add Products</a>
                <% } %>
            </div>
        <% } %>
    </div>

    <!-- Bootstrap JS and Icons -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" rel="stylesheet">


