<!-- partials/productList.ejs -->
<div class="container my-5">
    <h2 class="text-center mb-4">Products in 'Men' Category</h2>
  
    <% if (products && products.length > 0) { %>
      <div class="row g-4">
        <% products.forEach(function(product) { %>
          <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="card product-card">
              <!-- Product Image -->
              <img src="<%= product.picture.length > 0 ? product.picture[0].imgUrl : '/images/default-product.jpg' %>" class="card-img-top" alt="<%= product.name %>">
  
              <div class="card-body text-center">
                <!-- Product Name -->
                <h5 class="card-title"><%= product.name %></h5>
  
                <!-- Product Description -->
                <p class="card-text text-muted">
                  <%= product.description.length > 100 ? product.description.substring(0, 100) + '...' : product.description %>
                </p>
  
                <!-- Product Price -->
                <p class="price"><%= product.price ? `$${product.price.toFixed(2)}` : 'Price Not Available' %></p>
  
                <!-- Availability Status -->
                <span class="badge <%= product.isAvailable ? 'bg-success' : 'bg-danger' %>">
                  <%= product.isAvailable ? 'In Stock' : 'Out of Stock' %>
                </span>
  
                <!-- Product Action Links -->
                <div class="mt-3">
                  <a href="/product/<%= product._id %>" class="btn btn-primary btn-sm">View Details</a>
                  <a href="/editProduct/<%= product._id %>" class="btn btn-warning btn-sm">Edit</a>
                  <a href="/deleteProduct/<%= product._id %>" class="btn btn-danger btn-sm">Delete</a>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <div class="alert alert-warning" role="alert">
        No products found in this category.
      </div>
    <% } %>
  </div>
  