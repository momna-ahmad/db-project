<div class="container">
    <div class="card shadow-lg" style="width: 28rem;">
        <div class="card-body">
            <h2 class="card-title text-center mb-4">Add Product</h2>
            <form action="/admin/add-product" method="POST" enctype="multipart/form-data">
                <!-- Product Name -->
                <div class="mb-3">
                    <label for="name" class="form-label">Product Name</label>
                    <input type="text" id="name" name="name" class="form-control" placeholder="Enter product name" required>
                </div>
                <!-- Category -->
                <div class="mb-3">
                    <label for="category" class="form-label">Category</label>
                    <select id="category" name="category" class="form-control" required>
                        <option value="">Select a category</option>
                        <option value="Men Clothing">Men Clothing</option>
                        <option value="Women Clothing">Women Clothing</option>
                        <option value="Accessories">Accessories</option>
                        <option value="Footwear">Footwear</option>
                        <option value="Vintage Pieces">Vintage Pieces</option>
                    </select>
                </div>
                <!-- Price -->
                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" id="price" name="price" class="form-control" placeholder="Enter price" required>
                </div>
                <!-- Product Images -->
                <div class="mb-4">
                    <label for="image" class="form-label">Image</label>
                    <input type="file" id="image" name="image" class="form-control" accept="image/*" required>
                </div>
                <!-- Description -->
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" id="description" name="description" rows="3"></textarea>
                </div>
                <!-- Availability -->
                <div class="mb-3">
                    <label for="isAvailable" class="form-label">Is Available</label>
                    <select class="form-control" id="isAvailable" name="isAvailable">
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary w-100">Add Product</button>
            </form>
        </div>
    </div>
</div>
