    <!-- Bag Page Content -->
  <div class="container mt-5">
    
  <h2 class="mb-4">Products in 'Footware' Category</h2>
  <!-- Filter and Sort Section -->
  <div class="d-flex justify-content-between   mb-4">
    <!-- Filter Dropdown -->
    <div class="dropdown">
      <button class="  btn btn-outline-secondary text-black border-secondary-subtle  filter-sort-wrapper dropdown-toggle"style="padding-right:110px;"  type="button" id="filterDropdown" data-bs-toggle="dropdown" aria-expanded="false" >
        <i class="icon fa-solid fa-sliders pe-1" ></i> Filter
      </button>
      <ul class=" dropdown-menu " aria-labelledby="filterDropdown">
        <li><a class="dropdown-item" href="#">Category 1</a></li>
        <li><a class="dropdown-item" href="#">Category 2</a></li>
        <li><a class="dropdown-item" href="#">Category 3</a></li>
      </ul>
    </div>

    <!-- Sort By Dropdown -->
    <div class="dropdown">
      <button class="btn btn-outline-secondary text-black border-secondary-subtle custom-dropdown-btn dropdown-toggle"style="padding-right:110px;" type="button" id="sortDropdown" data-bs-toggle="dropdown" aria-expanded="false">
        <i class="fa-solid fa-sort pe-1"></i> Sort by
      </button>
      <ul class="dropdown-menu" aria-labelledby="sortDropdown">
        <li><a class="dropdown-item" href="#">Price</a></li>
        <li><a class="dropdown-item" href="#">Rating</a></li>
        <li><a class="dropdown-item" href="#">Newest</a></li>
      </ul>
    </div>
  </div>

<div class="container my-5">
    
  
    <% if (products && products.length > 0) { %>
      <div class="row g-4">
        <% products.forEach(product => { %>
          <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="card product-card h-100">
              <!-- Product Image -->
              <img 
                src="<%= product.picture && product.picture.length > 0 ? product.picture[0].imgUrl : '/images/default-product.jpg' %>" 
                class="card-img-top img-fluid" 
                alt="<%= product.name %>"
              >
  
              <div class="card-body text-center">
                <!-- Product Name -->
                <h5 class="card-title text-truncate"><%= product.name %></h5>
  
                <!-- Product Description -->
                <p class="card-text text-muted small">
                  <%= product.description.length > 80 
                    ? product.description.substring(0, 80) + '...' 
                    : product.description %>
                </p>
  
                <!-- Product Price -->
                <p class="price fw-bold"><%= product.price ? `Rs. ${product.price.toFixed(2)}` : 'Price Not Available' %></p>
  
                <!-- Availability Status -->
                <span class="badge <%= product.isAvailable ? 'bg-success' : 'bg-danger' %>">
                  <%= product.isAvailable ? 'In Stock' : 'Out of Stock' %>
                </span>
  
                <!-- Add to Cart Button -->
                <div class="mt-3">
                    <a href="/add-to-cart/<%= product._id %>" class="btn btn-primary btn-sm w-100">Add to Cart</a>  
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <div class="alert alert-warning text-center" role="alert">
        No products found in this category.
      </div>
    <% } %>
  </div>